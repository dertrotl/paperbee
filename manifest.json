{
    "display_information": {
        "name": "Message Reporter",
        "description": "Flags messages to admin as inappropriate.",
        "background_color": "#232d4a"
    },
    "features": {
        "bot_user": {
            "display_name": "message-reporter",
            "always_online": false
        },
        "shortcuts": [
            {
                "name": "Report Message",
                "type": "message",
                "callback_id": "report_message",
                "description": "Flags message as inappropriate to admins."
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write",
                "commands"
            ]
        }
    },
    "settings": {
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}